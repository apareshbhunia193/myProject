<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#fff"
    app:cardElevation="5dp"
    app:contentPadding="7dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/uPicture"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:background="@color/colorAccent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/uName"
                    android:layout_margin="7dp"
                    android:textColor="#000"
                    android:fontFamily="serif"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:text="User Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_more"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/home_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_margin="2dp"
            android:textSize="15sp"
            android:text="Post Title"
            android:textColor="#000"
            android:autoLink="all"
            />
        <TextView
            android:id="@+id/home_post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="12sp"
            android:text="Post description goes here"
            android:autoLink="all"
            />
        <ImageView
            android:id="@+id/home_main_post"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="#fff"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffa"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/home_usebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_like"
                android:drawableStart="@drawable/ic_like"
                android:drawablePadding="7dp"
                android:text="Useful"
                android:background="@null"
                />
            <Button
                android:id="@+id/home_report_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_report"
                android:drawablePadding="7dp"
                android:text="Report Fake"
                android:background="@null"
                />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>