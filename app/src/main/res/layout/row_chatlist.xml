<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#fff"
    app:contentPadding="3dp"
    app:cardUseCompatPadding="true"
    android:elevation="90dp"
    >
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/profilepic_chatlist"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            android:background="@color/colorAccent"
            />
        <TextView
            android:id="@+id/name_chatlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12sp"
            android:layout_marginTop="8dp"
            android:fontFamily="serif"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="His Name"
            android:layout_toEndOf="@id/profilepic_chatlist"
            />
        <TextView
            android:id="@+id/email_chatlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profilepic_chatlist"
            android:layout_below="@id/name_chatlist"
            android:text="Email goes here"
            android:fontFamily="serif-monospace"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>